<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:kikbak="http://schemas.android.com/apk/res/com.referredlabs.kikbak"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GiveActivity" >

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/give_photo_frame" />

    <ViewStub
        android:id="@+id/gift_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/gift_details_both" />

    <com.referredlabs.kikbak.widget.TtfButton
        android:id="@+id/give"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/btn_blue"
        android:text="@string/give_to_friends"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        kikbak:typeface="Roboto-Medium.ttf" />

</LinearLayout>