<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aaaaaa"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="Zen Yoga" />

    <LinearLayout
        android:id="@+id/success_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/success_gift_background"
        android:gravity="center_vertical"
        android:minHeight="80dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/redeem_success_title" />

        <TextView
            android:id="@+id/redeem_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/redeem_success_gift_note" />
    </LinearLayout>

    <TextView
        android:id="@+id/redeem_type_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="@string/redeem_success_offer" />

    <TextView
        android:id="@+id/redeem_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="28dp"
        android:text="$50 off" />

    <TextView
        android:id="@+id/redeem_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="28dp"
        android:text="optional subtitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:src="@drawable/qr_code" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="28dp"
            android:text="VLX435" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/redeem_success_share_note" />

    <Button
        android:id="@+id/give"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/give" />

</LinearLayout>