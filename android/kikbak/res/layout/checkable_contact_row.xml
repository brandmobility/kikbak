<com.referredlabs.kikbak.widget.CheckableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kikbak="http://schemas.android.com/apk/res/com.referredlabs.kikbak"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="6dip" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="6dip" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/check" >

            <com.referredlabs.kikbak.widget.TtfTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#3a3a3a"
                android:textSize="21dp"
                kikbak:typeface="Roboto-Regular.ttf" />

            <com.referredlabs.kikbak.widget.TtfTextView
                android:id="@+id/dataItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:textColor="#3a3a3a"
                android:textSize="13dp"
                kikbak:typeface="Roboto-Regular.ttf" />
        </RelativeLayout>
    </RelativeLayout>

</com.referredlabs.kikbak.widget.CheckableFrameLayout>