<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kikbak="http://schemas.android.com/apk/res/com.referredlabs.kikbak"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.referredlabs.kikbak.widget.TtfTextView
        android:id="@+id/gift_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:drawableLeft="@drawable/ic_gift"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="Give $10 off $50"
        android:textColor="#247de9"
        android:textSize="26dp"
        kikbak:typeface="Roboto-Bold.ttf" />

    <!-- FIXME:VZ -->
    <com.referredlabs.kikbak.widget.TtfTextView
        android:visibility="gone"
        android:id="@+id/gift_desc_opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gift_desc"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:text="@string/give_gift_optional_note"
        android:textColor="#686868"
        android:textSize="13dp"
        kikbak:typeface="Roboto-Regular.ttf" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/gift_desc_opt"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:background="#999999" />

    <com.referredlabs.kikbak.widget.TtfTextView
        android:id="@+id/reward_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_cup"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Get $50 prepaid\ndebit card"
        android:textColor="#3a3a3a"
        android:textSize="26dp"
        kikbak:typeface="Roboto-Bold.ttf" />

    <!-- FIXME:VZ -->
    <com.referredlabs.kikbak.widget.TtfTextView
        android:visibility="gone"
        android:id="@+id/reward_desc_opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reward_desc"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:text="@string/give_get_optional_note"
        android:textColor="#686868"
        android:textSize="13dp"
        kikbak:typeface="Roboto-Regular.ttf" />

    <com.referredlabs.kikbak.widget.TtfTextView
        android:id="@+id/expiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reward_desc_opt"
        android:includeFontPadding="false"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="11dp"
        android:text="Offer expires:31.12.2014"
        android:textColor="#686868"
        android:textSize="13dp"
        kikbak:typeface="Roboto-Regular.ttf" />
    
    <com.referredlabs.kikbak.widget.TtfTextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/expiration"
        android:includeFontPadding="false"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="11dp"
        android:text="@string/terms"
        android:textColor="@color/link"
        android:textSize="13dp"
        kikbak:typeface="Roboto-Regular.ttf" />

    <com.referredlabs.kikbak.widget.TtfTextView
        android:id="@+id/privacy_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/expiration"
        android:includeFontPadding="false"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="11dp"
        android:text="@string/privacy_policy"
        android:textColor="@color/link"
        android:textSize="13dp"
        kikbak:typeface="Roboto-Regular.ttf" />

</RelativeLayout>