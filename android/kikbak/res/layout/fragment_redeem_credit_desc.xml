<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kikbak="http://schemas.android.com/apk/res/com.referredlabs.kikbak"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="12dp"
    android:paddingBottom="10dp"
    android:background="#ffffff" >

    <com.referredlabs.kikbak.widget.TtfTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/credit_label"
        kikbak:typeface="Roboto-Bold.ttf"
       	android:textColor="#3a3a3a"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#c4c4c4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.referredlabs.kikbak.widget.TtfButton
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/credit_change"
            kikbak:typeface="Roboto-Regular.ttf"
        	android:textColor="@android:color/white"
        	android:textSize="15dp"
        	android:background="@drawable/btn_grey" />

        <com.referredlabs.kikbak.widget.TtfTextView
            android:id="@+id/credit_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="$15.00"
            kikbak:typeface="Roboto-Bold.ttf"
        	android:textColor="#3a3a3a"
            android:textSize="36dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#c4c4c4" />

    <com.referredlabs.kikbak.widget.TtfTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/credit_warning"
        kikbak:typeface="Roboto-Regular.ttf"
        android:textColor="#9c9c9c"
        android:textSize="13dp" />
    
    <com.referredlabs.kikbak.widget.TtfTextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="@string/terms"
        kikbak:typeface="Roboto-Regular.ttf"
        android:textColor="#686868"
        android:textSize="13dp" />

</LinearLayout>